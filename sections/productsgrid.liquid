



<ul>
  {% for product in collections.all.products %}
  
  	{% if product.has_only_default_variant %}
  
  		<input name="id" value="{{ variant.id }}" type="hidden">
	{% else %}
  		<select name="id">
    	{% for variant in product.variants %}
      		<option value="{{ variant.id }}">{{ variant.option1 }}</option>
    	{% endfor%}
  		</select>
  		
  		<select name="id">
    	{% for variant in product.variants %}
      		<option value="{{ variant.id }}">{{ variant.option2.id }}</option>
    	{% endfor%}
  		</select>
	{% endif %}
  <li>{{ product.title }}</li>
  {%endfor%}
</ul>